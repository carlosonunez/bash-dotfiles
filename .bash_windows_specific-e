if [ "$(get_os_type)" == "Linux" ] && \
  [ -f /proc/version ] && \
  [ "$(cat /proc/version | grep "Microsoft")" != "" ]
then
  printf "${BYellow}INFO${NC}: Creating symlinks to common Windows directories\n"
  windows_home_directory="/mnt/c/Users/accou"
  for d in Downloads
  do
    log_info "\t ---> ${d}\n"
    rm "$HOME/${d}"
    ln -s "${windows_home_directory}/${d}" "$HOME/${d}"
  done
fi
