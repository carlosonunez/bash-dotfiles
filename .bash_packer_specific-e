if [ "$(which packer 2>/dev/null)" == "" ]
then
  if [ "$(get_os_type)" == "Darwin" ]
  then
    brew install packer
  else
    PACKER_LOCATION="/usr/local/bin/packer"
    PACKER_DL_LINK="https://releases.hashicorp.com/packer/0.12.1/packer_0.12.1_linux_amd64.zip"
    [[ ! -f "$PACKER_LOCATION" ]] && {
    printf "${BYellow}INFO${NC}: Installing ${BGreen}packer${NC}\n"
    pushd /tmp
    wget -q "${PACKER_DL_LINK}"
    find . -maxdepth 1 -name '*.zip'
    which unzip || install_application "unzip"
    if [ ! -f $(basename $PACKER_DL_LINK) ]
    then
      printf "${BRed}ERROR${NC}: Couldn't find Packer zip at $(basename $PACKER_DL_LINK)"
      return 1
    fi
    unzip -q `basename $PACKER_DL_LINK`
    sudo -i mv /tmp/packer $PACKER_LOCATION
    popd
  }
  fi
fi
