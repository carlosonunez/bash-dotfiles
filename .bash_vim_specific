#!/usr/bin/env bash
update_vim_bundles() {
  for bundle_repo in $VIM_BUNDLE_REPOS
  do
    log_info "Updating '$bundle_repo'"
    dir="$HOME/.vim/bundle/$(basename $bundle_repo)"
    pushd "$dir" && git pull --quiet && popd
  done
}

install_ycm() {
  test -f "$HOME/.config/vim/.ycm_installed" && return 0

  test -d "$HOME/.config/vim" || mkdir -p "$HOME/.config/vim"
  case "$(uname)" in
    Darwin)
      brew install cmake python go &&
        pushd ~/.vim/bundle/YouCompleteMe &&
          python3 install --clang-completer --go-completer --rust-completer --clangd-completer &&
          touch "$HOME/.config/vim/.ycm_installed"
        rc=$?
        popd || return
        return "$rc"
      ;;
    *)
      log_error "This operating system is not supported yet: $(uname)"
      return 1
      ;;
  esac
}

VIM_BUNDLE_REPOS=$(cat <<GITHUB_URLS
907th/vim-auto-save
AndrewRadev/linediff.vim
Chiel92/vim-autoformat
NoahTheDuke/vim-just
PProvost/vim-ps1
Xuyuanp/nerdtree-git-plugin
aliou/bats.vim
cespare/vim-toml
chaquotay/ftl-vim-syntax
chr4/nginx.vim
claco/jasmine.vim
ctrlpvim/ctrlp.vim
ctrlpvim/ctrlp.vim
dense-analysis/ale
dhruvasagar/vim-table-mode
fatih/vim-go
flazz/vim-colorschemes
hashivim/vim-terraform
jsecchiero/vim-sops.git
junegunn/fzf
junegunn/fzf.vim
junegunn/vim-easy-align
junegunn/vim-emoji
kovetskiy/vim-bash
lambdalisue/battery.vim
leafgarland/typescript-vim
markcornick/vim-bats
martinda/Jenkinsfile-vim-syntax
othree/javascript-libraries-syntax.vim
pangloss/vim-javascript
plasticboy/vim-markdown
preservim/vimux
rlue/vim-fold-rspec
romainl/vim-cool
rust-lang/rust.vim
ryanoasis/vim-devicons
scrooloose/nerdtree
skywind3000/asyncrun.vim
thoughtbot/vim-rspec
towolf/vim-helm
tpope/vim-classpath
tpope/vim-fugitive.git
tpope/vim-unimpaired
vim-airline/vim-airline
vim-airline/vim-airline-themes
vim-scripts/groovy.vim
vim-test/vim-test
will133/vim-dirdiff
willchao612/vim-diagon
xolox/vim-misc
ycm-core/YouCompleteMe
yuratomo/w3m.vim
zivyangll/git-blame.vim
GITHUB_URLS
)

for bundle_repo in $VIM_BUNDLE_REPOS
do
  if [ ! -f ~/.vim/bundle ]
  then
    mkdir -p ~/.vim/bundle
  fi
  if [ ! -d "$HOME/.vim/bundle/$(basename $bundle_repo)" ]
  then
    git clone "https://github.com/$bundle_repo" "$HOME/.vim/bundle/$(basename "$bundle_repo")"
  fi
done
install_ycm
